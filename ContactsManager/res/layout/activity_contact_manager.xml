<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prajitdas.contactmanager.ContactManager" >

    <ListView
        android:id="@+id/contactListView"
        android:layout_width="match_parent"
        android:layout_height="397dp" >
    </ListView>

    <Button
        android:id="@+id/addContactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/addContactButtonLabel" />

    <CheckBox
        android:id="@+id/showInvisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addContactButton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contactListView"
        android:layout_toRightOf="@+id/addContactButton"
        android:text="@string/showInvisible" />
	
</RelativeLayout>